
local player = game.Players.LocalPlayer
local CoreGui = game:GetService("CoreGui")

-- Function to drop all tools
local function dropAllTools()
    local backpack = player.Backpack
    local character = player.Character or player.CharacterAdded:Wait()
    
    -- Drop all tools in backpack
    for _, tool in pairs(backpack:GetChildren()) do
        if tool:IsA("Tool") then
            character.Humanoid:EquipTool(tool)
            wait(0.05)
            tool.Parent = workspace
        end
    end
    
    -- Drop currently equipped tool
    for _, tool in pairs(character:GetChildren()) do
        if tool:IsA("Tool") then
            tool.Parent = workspace
        end
    end
    
    print("All tools dropped!")
end

-- Create ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "DropToolsGUI"
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = CoreGui

-- Create main frame
local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 200, 0, 100)
Frame.Position = UDim2.new(0.5, -100, 0.1, 0)
Frame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
Frame.BorderSizePixel = 0
Frame.Active = true
Frame.Draggable = true
Frame.Parent = ScreenGui

-- Add corner
local Corner = Instance.new("UICorner")
Corner.CornerRadius = UDim.new(0, 8)
Corner.Parent = Frame

-- Create title
local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, 0, 0, 30)
Title.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
Title.BorderSizePixel = 0
Title.Text = "8KNGS DROP ALL"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextSize = 16
Title.Font = Enum.Font.GothamBold
Title.Parent = Frame

-- Add corner to title
local TitleCorner = Instance.new("UICorner")
TitleCorner.CornerRadius = UDim.new(0, 8)
TitleCorner.Parent = Title

-- Create drop button
local DropButton = Instance.new("TextButton")
DropButton.Size = UDim2.new(0, 160, 0, 40)
DropButton.Position = UDim2.new(0.5, -80, 0.5, 5)
DropButton.BackgroundColor3 = Color3.fromRGB(220, 50, 50)
DropButton.BorderSizePixel = 0
DropButton.Text = "Drop All Tools"
DropButton.TextColor3 = Color3.fromRGB(255, 255, 255)
DropButton.TextSize = 14
DropButton.Font = Enum.Font.GothamBold
DropButton.Parent = Frame

-- Add corner to button
local ButtonCorner = Instance.new("UICorner")
ButtonCorner.CornerRadius = UDim.new(0, 6)
ButtonCorner.Parent = DropButton

-- Button hover effect
DropButton.MouseEnter:Connect(function()
    DropButton.BackgroundColor3 = Color3.fromRGB(255, 60, 60)
end)

DropButton.MouseLeave:Connect(function()
    DropButton.BackgroundColor3 = Color3.fromRGB(220, 50, 50)
end)

-- Button click action
DropButton.MouseButton1Click:Connect(function()
    DropButton.Text = "Dropping..."
    dropAllTools()
    wait(0.5)
    DropButton.Text = "Drop All Tools"
end)

-- Create close button
local CloseButton = Instance.new("TextButton")
CloseButton.Size = UDim2.new(0, 30, 0, 30)
CloseButton.Position = UDim2.new(1, -30, 0, 0)
CloseButton.BackgroundTransparency = 1
CloseButton.Text = "X"
CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
CloseButton.TextSize = 18
CloseButton.Font = Enum.Font.GothamBold
CloseButton.Parent = Frame

-- Close button action
CloseButton.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)
